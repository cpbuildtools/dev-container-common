{
  "name": "@cpbuildtools/dev-container-common",
  "version": "0.0.0",
  "repository": "https://github.com/cpbuildtools/dev-container-common",
  "main": "main/index.js",
  "typings": "main/index.d.ts",
  "module": "module/index.js",
  "scripts": {
    "prepare": "run-s prepare:* && husky install",
    "prepare:husky": "husky install",
    "build": "run-s build:*",
    "build:ts": "run-p build:ts:*",
    "build:ts:main": "tsc -p tsconfig.json",
    "build:ts:module": "tsc -p tsconfig.module.json",
    "build:copy-package": "ts-node .scripts/copy-package.ts",
    "pack": "run-s pack:*",
    "pack:build": "pnpm run build",
    "pack:pack": "cd dist && mkdir ./pack && pnpm pack --pack-destination ./pack",
    "release": "pnpm publish ./dist/pack --access public --publish-branch 'release/latest'",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --ignore-unknown .",
    "pre-commit": "echo pre-commit",
    "watch:build": "tsc -p tsconfig.json -w",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.1",
    "@types/node": "^18.6.1",
    "@types/yargs": "^17.0.10",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all2": "^6.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public",
    "publish-branch": "release/latest"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "dependency-graph": "^0.11.0",
    "fast-glob": "^3.2.11",
    "inquirer": "^9.0.2",
    "linq": "^4.0.0",
    "simple-git": "^3.10.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "type-fest": "^2.17.0"
  }
}
