{
  "name": "@cpbuildtools/dev-container-common",
  "repository": "https://github.com/cpbuildtools/dev-container-common",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "scripts": {
    "prepare": "run-s prepare:* && husky install",
    "prepare:husky": "husky install",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --ignore-unknown .",
    "pre-commit": "echo pre-commit",
    "watch:build": "tsc -p tsconfig.json -w",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i"
  },
  "devDependencies": {
    "@types/node": "^18.6.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all2": "^6.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
