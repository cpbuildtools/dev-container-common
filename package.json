{
  "name": "@cpbuildtools/dev-container-common",
  "repository": "https://github.com/cpbuildtools/dev-container-common",
  "scripts": {
    "prepare": "run-s prepare:* && husky install",
    "prepare:husky": "husky install",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write .",
    "pre-commit": "run-s pre-commit:*",
    "pre-commit:lint": "lint-staged"
  },
  "devDependencies": {
    "@types/node": "^18.6.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all2": "^6.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.format:*": "prettier --write"
  }
}
